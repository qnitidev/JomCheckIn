<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/bluegrad"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/menuTypeDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Main Menu"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >



            <LinearLayout
                android:layout_width="match_parent"
                android:padding="@dimen/_11sdp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcomeName"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:text="Welcome" />

                <LinearLayout
                    android:id="@+id/scanQR"
                    android:background="@drawable/layoutcornerlightyellow"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Scan QR Code"
                            android:textAlignment="center"
                            android:textColor="@color/colorFormTitle"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="gone"
                            android:text="Digital Al-Quran" />
                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_qr_code_scan"
                        app:civ_border_width="0dp"
                        app:civ_border_color="#FF000000"/> />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pastVisited"
                    android:background="@drawable/layoutcornerlightyellow"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/colorFormTitle"
                            android:text="Check In History" />

                        <TextView
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="gone"
                            android:text="TextView" />
                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_past_visit"
                        app:civ_border_width="0dp"
                        app:civ_border_color="#FF000000"/> />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile"
                    android:background="@drawable/layoutcornerlightyellow"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/colorFormTitle"
                            android:text="Profile" />

                        <TextView
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_11sdp"
                            android:visibility="gone"
                            android:text="TextView" />
                    </LinearLayout>

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="@dimen/_75sdp"
                        android:src="@drawable/ic_profile"
                        app:civ_border_width="0dp"
                        app:civ_border_color="#FF000000"/> />
                </LinearLayout>


                <TextView
                    android:id="@+id/versionTXT"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version"
                    android:textAlignment="center"
                    android:textColor="@color/colorFormTitle"
                    android:textSize="@dimen/_8sdp"
                    />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>